<?xml version="1.0"?>
<config>
    <tabs>
        <icebergcommerce>
            <label>Iceberg Commerce</label>
            <sort_order>600</sort_order>
        </icebergcommerce>
    </tabs>
	<sections>
		<videogallery>
			<label>Video Gallery</label>
			<tab>icebergcommerce</tab>
			<frontend_type>text</frontend_type>
			<sort_order>91</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
			    <info>
                    <frontend_model>videogallery/adminhtml_system_version</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </info>
				<adminconfig>
					<label>Admin Settings</label>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<suggestions>
							<label>Enable Video Suggestions</label>
							<comment>Visible on Product Edit Page.  Shows Video Suggestions from Video Sites Automatically</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</suggestions>
					</fields>
				</adminconfig>
				<frontconfig>
					<label>Frontend Display Settings</label>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
                        <defaultwidth>
                            <label>Default Video Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </defaultwidth>
                        <defaultheight>
                            <label>Default Video Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </defaultheight>
                        <displaystyle>
                            <label>Display Style</label>
                            <frontend_type>select</frontend_type>
                            <source_model>IcebergCommerce_VideoGallery_Model_System_Config_Source_Displaystyle</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displaystyle>
                        <imagedisplay>
							<label>Use Iceberg Template for Product Images</label>
							<comment>Changes the way product images are displayed. Disables the product zoom and enables the Iceberg Lightbox (if installed)</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</imagedisplay>
					</fields>
				</frontconfig>
				
				<vimeopro>
					<label>Vimeo Pro Account Settings</label>
					<sort_order>300</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
                        <api_key>
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                        <api_secret>
                            <label>API Key Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_secret>
                        <access_token>
                            <label>Access Token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </access_token>
                        <access_token_secret>
                            <label>Access Token Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </access_token_secret>
					</fields>
				</vimeopro>
			</groups>
		</videogallery>
	</sections>
</config>